---
interface Props {  
    title: string;  
}  
const { title } = Astro.props;  

import Header from '../components/Header.astro';  
import Inicio from '../components/Inicio.astro';  
import SobreMi from '../components/Experiencia.astro';  
import Proyectos from '../components/Proyectos.astro';  
import Tecnologias from '../components/Tecnologias.astro';  
import Footer from '../components/Footer.astro';  
---

<!doctype html>  
<html lang="es">  
    <head>  
        <meta charset="UTF-8" />  
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
        <title>{title}</title>  
    </head>  
    <body class="flex flex-col items-center bg-gradient-to-b from-[#00010e] to-[#000233] min-h-screen">  
        <Header />  
        <main class="w-full flex flex-col items-center">  
            <Inicio />  
            <SobreMi />  
            <Proyectos />  
            <Tecnologias />  
        </main>  
        <Footer />  
    </body>  
</html>

